<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B3000000"
    android:padding="16dp">

    <!-- Hide Keyboard Button -->
    <TextView
        android:id="@+id/btn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="▼ HIDE ▼"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- D-Pad Container (Left Side) -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_hide"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/key_up"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/key_bg"
            android:gravity="center"
            android:text="▲"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/key_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/key_up"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/key_down"
            android:background="@drawable/key_bg"
            android:gravity="center"
            android:text="◀"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/key_down"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/key_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/key_bg"
            android:gravity="center"
            android:text="▼"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/key_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/key_up"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/key_down"
            android:background="@drawable/key_bg"
            android:gravity="center"
            android:text="▶"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <!-- Space Bar (Right Side) -->
    <TextView
        android:id="@+id/key_space"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/key_bg"
        android:gravity="center"
        android:text="SPACE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
